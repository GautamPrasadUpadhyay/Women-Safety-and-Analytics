    <!-- Emergency Button Centered -->
    <button class="emergency-button" onclick="sendTelegramMessage()">Emergency</button>

    <script>
    function sendTelegramMessage() {
        // Your Telegram bot token and chat ID
        const botToken = '7367104349:AAEfY7hIMX3AmIR0nrRSuYKJTUXLbyWCFKM'; // Your bot token
        const chatId = '946411640'; // Replace with your chat ID
        const message = 'SOS Signal Received, Threat Detected. Live Coordinates - Lat. 012°49\'30"N Lon. 080°02\'42"E. \n Details, visit: https://colab.research.google.com/drive/1PtCX-uC40wdHbUlwiY8JjE1D_rqChcE6#scrollTo=lkU9tn5s_B3s';

        // Construct the API URL
        const url = `https://api.telegram.org/bot${botToken}/sendMessage?chat_id=${chatId}&text=${encodeURIComponent(message)}`;

        // Make a request to Telegram API
        fetch(url)
            .then(response => response.json())
            .then(data => {
                if (data.ok) {
                    alert('Message sent successfully!');
                } else {
                    alert('Failed to send message: ' + data.description);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while sending the message.');
            });
    }
    </script>

